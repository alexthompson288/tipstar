<h1>Listing items</h1>

<div class="list-view">
  <% @items.each do |item| %>
    <div class="row">
      <div class="col-xs-8">
        <h3><%= item.name %></h3>
      </div>
      <div class="col-xs-4">
        <p>Tipstars <%= item.tipstars %></p>
      </div>
      <div class="clear"></div>
      <div class="col-xs-4">
        <a href="/items/<%= item.id %>">
          <img class="list-image-thumbnail" src="http://image.tmdb.org/t/p/w154/<%= item.image %>"></a>
      </div>

      <div class="col-xs-8">
        <%= item.description %>
      </div>
      <div class="clear"></div>
      <br />
      <div class="col-xs-4">
        <a href="#" class="btn-small">Add</a>
      </div>
      <div class="col-xs-4">
        <a href="#" class="btn-small">Tipstar</a>
      </div>
    </div>
    <hr />
  <% end %>
</div>